mixin team(data = {})
	-
		const { members = [] } = data;
	section.team#team
		h2.team__title Наша команда
		ul.team__list
			each member in members
				li.team__item
					picture.team__frame
						source(media="(min-width: 1200px)" srcset=member.srcWebp1x + '-lg.webp 1x, ' + member.srcWebp2x + '-lg_2x.webp  2x' type="image/webp")
						source(media="(min-width: 1200px)" srcset=member.srcWebp1x + '-lg.png 1x' type="image/png")
						source(srcset=member.srcWebp1x + '-sm.webp 1x, ' + member.srcWebp2x + '-sm_2x.webp 2x', type="image/webp")
						img.team__frame-img(src=member.srcPng, alt=member.alt)
					.team__data
						h3.team__name= member.name
						span.team__position= member.position
						.team__about
							each desc in member.descriptions
								p.team__description !{desc}